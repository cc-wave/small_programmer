/* components/menu/menu.wxss */
.menu{
  position: fixed;
  right: 20rpx;
  top: 600rpx;
  width: 86rpx;
}
.menu_navigate{
  background: #e93323;
  border-radius: 43rpx;
  text-align: center;
  color:#fff;
  padding: 20rpx 10rpx 30rpx 0;
  height: 0;
  transform: scale(0);
  opacity: 0;
  transition: all 0.5s;
}
.menu_open{
  height: 160rpx;
  transform: scale(1);
  opacity: 1;
}
.menu_navigate navigate{
  line-height: 75rpx;
  font-size: 40rpx;
}
.menu_btn{
  margin-top: 20rpx;
  width: 100%;
  height: 100rpx;
}
.menu_btn image{
  width: 100%;
  height: 90%;
}